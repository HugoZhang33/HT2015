<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="@drawable/White"
        android:textSize="60px"></TextView>

    <EditText
        android:id="@+id/EmailText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:textSize="60px"></EditText>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="@drawable/White"
        android:textSize="60px"></TextView>

    <EditText
        android:id="@+id/PasswordText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:singleLine="true"
        android:text=""
        android:textSize="60px"></EditText>

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/YellowSilver">

        <Button
            android:id="@+id/LoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="  Login  "
            android:textSize="35px"></Button>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/LoginButton"
            android:gravity="center"
            android:text="Schedule papers &amp; Sync schedule"
            android:textColor="@drawable/White"
            android:textSize="8pt"></TextView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/YellowSilver">

        <Button
            android:id="@+id/SignupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Sign Up"
            android:textSize="35px"></Button>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/SignupButton"
            android:gravity="center"
            android:text="Don't have an account yet?"
            android:textColor="@drawable/White"
            android:textSize="8pt"></TextView>

    </RelativeLayout>
</LinearLayout>
