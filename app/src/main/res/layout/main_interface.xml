    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back2">

    <FrameLayout
        android:id="@+id/FrameLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner">

